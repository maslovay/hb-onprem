FROM microsoft/dotnet:2.2-sdk AS test-env
WORKDIR /app
COPY . .

WORKDIR /app/HBOperations
RUN killall -9 dotnet; exit 0;   
RUN dotnet restore /app/HBOperations/; exit 0;
RUN dotnet build
  
WORKDIR /app/HBOperations/ReferenceControllerServiceTests/

RUN dotnet test -r ./TestResults
RUN killall -9 dotnet; exit 0;