                                                                                    <td align="center" style="padding: 25px 0px 0px; line-height: 0px;">
                                                                                        <p style="color: #999999; font-size: 18px; font-family: sans-serif; font-weight: normal;">
                                                                                            @Model.text1
                                                                                            <a style="color: #999999; text-decoration: none; font-weight: 800;" href="https://www.heedbook.com/"> @Model.text2</a>
                                                                                            @Model.text3
                                                                                        </p>
                                                                                    </td>
                                                                                </tr>
                                                                                @if(Model.text4 != null)
