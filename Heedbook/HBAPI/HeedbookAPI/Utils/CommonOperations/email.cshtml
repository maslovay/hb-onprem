                                                                                <tr>
                                                                                    <th align="center" style="padding: 5px;">
                                                                                        @(Model.body)
                                                                                    </th>
                                                                                </tr>
                                                                                }
                                                                                @if(Model.button != null)
                                                                                {
                                                                                <tr>
                                                                                    <td align="center" style="padding: 30px 0px 0px 0px;">
                                                                                        <table border="0" cellspacing="0" cellpadding="0">
                                                                                            <tr>
                                                                                                <td height="70" style="border-radius: 10px !important; border-color: rgb(61, 92, 163); background: rgb(27, 57, 109); text-align: center; font-size: 22px; font-family: sans-serif; font-weight: bold; padding: 0 70px 0 70px;">
                                                                                                    <!--ТЕКСТ И ССЫЛКА КНОПКИ-->
                                                                                                    <a style="color: #d2d5da; text-decoration: none;" href="https://app.heedbook.com/">@(Model.button)</a>
                                                                                                </td>
                                                                                            </tr>
                                                                                        </table>
                                                                                    </td>
                                                                                </tr>
                                                                                }
